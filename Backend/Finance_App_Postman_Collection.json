						{
							"listen": "test",
							"script": {
								"exec": [
									"// Save JWT token to environment",
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.data && response.data.token) {",
									"        pm.environment.set(\"jwt_token\", response.data.token);",
